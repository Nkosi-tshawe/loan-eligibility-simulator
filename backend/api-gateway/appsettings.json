{
  "Jwt": {
    "Secret": "YourSuperSecretKeyThatShouldBeAtLeast32CharactersLongForProduction!",
    "Issuer": "LoanEligibilitySystem",
    "Audience": "LoanEligibilityClient"
  },
  "Services": {
    "AuthService": "http://auth-service:5002",
    "LoanService": "http://loan-service:5003"
  },
  "ReverseProxy": {
    "Routes": {
      "auth-route": {
        "ClusterId": "auth-cluster",
        "Match": {
          "Path": "/api/auth/{**catch-all}"
        }
      },
      "loan-route": {
        "ClusterId": "loan-cluster",
        "Match": {
          "Path": "/api/loans/{**catch-all}"
        },
        "AuthorizationPolicy": "RequireAuthentication"
      }
    },
    "Clusters": {
      "auth-cluster": {
        "Destinations": {
          "auth-destination": {
            "Address": "http://auth-service:5002"
          }
        }
      },
      "loan-cluster": {
        "Destinations": {
          "loan-destination": {
            "Address": "http://loan-service:5003"
          }
        }
      }
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
